<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fadeScrollbars="true"
    tools:context=".NotasActivity">

    <ListView
        android:id="@+id/lvNotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bCrearNota"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/fondo_lista_user" />

    <Button
        android:id="@+id/bCrearNota"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/botonverde"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="bCrearNotaNueva"
        android:text="@string/crear_nota_nueva"
        android:textColor="@color/colorAccent" />

</RelativeLayout>