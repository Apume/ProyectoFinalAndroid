<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tvListaUser"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorFondos"
        android:gravity="center"
        android:text="@string/lista_de_usuarios"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvUsuarios"
        android:layout_width="169dp"
        android:layout_height="362dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fondo_lista_user"
        app:layout_constraintEnd_toEndOf="@+id/tvListaUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvListaUser" />

    <EditText
        android:id="@+id/etGesNombreUser"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="@string/inserta_un_usuario"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/tvPassSelected"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/tvPassSelected"
        app:layout_constraintTop_toBottomOf="@+id/tvPassSelected"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/etGesPassUser"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="@string/inserta_una_pass"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/etGesNombreUser"
        app:layout_constraintStart_toStartOf="@+id/etGesNombreUser"
        app:layout_constraintTop_toBottomOf="@+id/etGesNombreUser"
        tools:targetApi="o" />

    <Button
        android:id="@+id/bBorrar"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/botonrojo"
        android:onClick="borrar"
        android:text="@string/borrar"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/etGesPassUser"
        app:layout_constraintStart_toStartOf="@+id/etGesPassUser"
        app:layout_constraintTop_toBottomOf="@+id/etGesPassUser" />

    <Button
        android:id="@+id/bCancelar"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botongris"
        android:onClick="cancelar"
        android:text="@string/cancelar"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/bModificar"
        app:layout_constraintStart_toStartOf="@+id/bModificar"
        app:layout_constraintTop_toBottomOf="@+id/bModificar" />

    <Button
        android:id="@+id/bModificar"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botonazul"
        android:onClick="modificar"
        android:text="@string/modificar"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/bBorrar"
        app:layout_constraintStart_toStartOf="@+id/bBorrar"
        app:layout_constraintTop_toBottomOf="@+id/bBorrar" />

    <Button
        android:id="@+id/bCerrarSesion"
        android:layout_width="167dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botongris"
        android:onClick="cerrarSesion"
        android:text="@string/cerrarSesion"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/tvListaUser"
        app:layout_constraintTop_toTopOf="@+id/tvListaUser" />

    <TextView
        android:id="@+id/tvUserSelected"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/fondo_lista_user"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toEndOf="@+id/lvUsuarios"
        app:layout_constraintTop_toTopOf="@+id/lvUsuarios" />

    <TextView
        android:id="@+id/tvPassSelected"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fondo_lista_user"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvUserSelected"
        app:layout_constraintStart_toStartOf="@+id/tvUserSelected"
        app:layout_constraintTop_toBottomOf="@+id/tvUserSelected" />

</android.support.constraint.ConstraintLayout>