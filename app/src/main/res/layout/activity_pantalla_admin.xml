<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaAdmin">

    <EditText
        android:id="@+id/etGestionUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svListaNombres"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="@string/hintGestion"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        tools:targetApi="o" />

    <ScrollView
        android:id="@+id/svListaNombres"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="9dp">

    </ScrollView>

    <Button
        android:id="@+id/bBorrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etGestionUsers"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/botonrojo"
        android:onClick="borrar"
        android:text="@string/borrar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bModificar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/bBorrar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/botonazul"
        android:onClick="modificar"
        android:text="@string/modificar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bAgregar"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_below="@+id/bModificar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/botonazul"
        android:onClick="agregar"
        android:text="@string/agregar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bCerrarSesion"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bAgregar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/botongris"
        android:onClick="cerrarSesion"
        android:text="@string/cerrarSesion"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:text="Lista de usuarios"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>